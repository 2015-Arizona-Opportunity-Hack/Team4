<%= form_for [@field] ,html: {role: "form", id:"field_form"} do |f| %>
	<div class="form-group">
		<%= f.label :name %><br />
		<%= f.text_field :name, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :type, "Type" %>
		<%= f.text_field :type, class: "form-control", placeholder: "Type" %>
	</div>
	<%= f.submit "Save", class: "btn btn-primary" %>
<% end %>

<%= javascript_tag do %>
	var builder_data;
	$(document).ready(function(){
		$('input[name="field[type]"]').select2({
			multiple: false,
			data: [{id: "boolean", text: "Boolean"}, {id: "text", text: "Text"}]
		});
	});
<% end %>